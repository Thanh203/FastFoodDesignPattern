@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Quản lý quyền";
    ViewData["Action"] = "Danh sách quyền";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<section class="content">
    <div class="card">
        <div class="card-body p-0">
            <table id="productTable" class="table table-striped projects">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="width: 20%">
                            <a asp-action="Create" class="btn btn-block btn-dark"> Thêm quyền</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="project-actions text-right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-folder"></i>
                                    Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-folder"></i>
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

                                    
@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#productTable').DataTable(
                {
                    "order": [[0, 'asc']],
                    "paging": true,
                    "searching": true,
                    "lengthMenu": [5, 10, 25, 50],
                    "pageLength": 5,
                    "language": {
                        "paginate": {
                            "previous": "<i class='fas fa-chevron-left'></i>",
                            "next": "<i class='fas fa-chevron-right'></i>"
                        }
                    },
                    "columnDefs": [
                        {
                        "targets": 0,
                        "render": function (data, type, row, meta) {
                            return meta.row + 1; 
                        }
                    },
                        {
                            "orderable": false,
                            "targets": 2,
                            "searchable": false
                        },
                    ],
                    "initComplete": function () {
                    $('.dataTables_wrapper').css('padding', '20px');
                }
                });
        });
    </script>
}
