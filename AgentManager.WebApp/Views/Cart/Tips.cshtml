@model List<FastFoodSystem.WebApp.Models.ViewModel.CartItem>

@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}

<form action="@Url.Action("Calculate", "Cart")" method="get">
    <label>Tip Percentage:</label><br>
    <div class="row">
        <div class="col">
            <button type="submit" name="tipPercentage" value="12" class="btn btn-outline-dark btn-lg btn-block" style="height: 100px; width: 100%;">12%</button>
        </div>
        <div class="col">
            <button type="submit" name="tipPercentage" value="20" class="btn btn-outline-dark btn-lg btn-block" style="height: 100px; width: 100%;">20%</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <button type="submit" name="tipPercentage" value="34" class="btn btn-outline-dark btn-lg btn-block" style="height: 100px; width: 100%;">34%</button>
        </div>
        <div class="col">
            <button type="submit" name="tipPercentage" value="45" class="btn btn-outline-dark btn-lg btn-block" style="height: 100px; width: 100%;">45%</button>
        </div>
    </div>

    <div> Total: @ViewBag.Bill</div>
</form>
