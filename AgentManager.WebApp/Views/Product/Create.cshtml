@model FastFoodSystem.WebApp.Models.Data.FFSProduct

@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<form asp-action="Create" class="content">
    <div class="row">
        <div class="col">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Thêm sản phẩm</h3>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label asp-for="FFSProductId"></label>
                        @Html.TextBoxFor(model => model.FFSProductId, new { Required = "Required", @class = "form-control"})
                        <span asp-validation-for="FFSProductId" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        @Html.TextBoxFor(model => model.Name, new { Required = "Required", @class = "form-control"})
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        @Html.TextBoxFor(model => model.Image, new { Required = "Required", @class = "form-control"})
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        @Html.TextBoxFor(model => model.Desc, new { Required = "Required", @class = "form-control"})
                        <span asp-validation-for="Desc" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label>Chọn danh mục</label>
                        @Html.DropDownListFor(model => model.FFSProductCategoryId, (SelectList)ViewBag.Categories, "Chọn danh mục", new { @class = "form-control" })
                        <span asp-validation-for="FFSProductCategoryId" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        @Html.TextBoxFor(model => model.Price, new { Required = "Required", @class = "form-control", type = "number"})
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>                 
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <input type="submit" value="Tạo mới" class="btn btn-success float-right">
        </div>
    </div>
</form>


