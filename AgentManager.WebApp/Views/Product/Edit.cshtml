
@model FastFoodSystem.WebApp.Models.Data.FFSProduct


@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}

<form asp-action="Edit" class="content">
    <div class="card card-secondary">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <div class="card-header">
            <h3 class="card-title">Sửa thông tin sản phẩm</h3>
        </div>  
        <div class="row">
            <div class="col">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FFSProductId"></label>
                        <input asp-for="FFSProductId" type="text" class="form-control" readonly="readonly" />
                        <span asp-validation-for="FFSProductId" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input asp-for="Image" type="text" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        <input asp-for="Desc" type="text" class="form-control" />
                        <span asp-validation-for="Desc" class="text-danger small"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="FFSProductCategoryId"></label>
                        <input asp-for="FFSProductCategoryId" type="text" class="form-control" />
                        <span asp-validation-for="FFSProductCategoryId" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <input type="submit" value="Lưu chỉnh sửa" class="btn btn-success float-right">
        </div>
    </div>
</form>

