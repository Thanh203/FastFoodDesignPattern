@{
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
@model FastFoodSystem.WebApp.Models.Data.FFSProductCategory;

<form asp-action="Create" class="content">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Sửa danh mục sản phẩm</h3>
        </div>
        <div class="row">
            <div class="col">
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Mã sản phẩm: </label>
                        <input asp-for="FFSProductCategoryId" type="text" class="form-control" readonly="readonly" />
                        <span asp-validation-for="FFSProductCategoryId" class="text-danger small"></span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Tên sản phẩm: </label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <input type="submit" value="Tạo mới" class="btn btn-success float-right">
        </div>
    </div>
</form>
